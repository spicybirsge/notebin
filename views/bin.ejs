  <title>Notebin - Save notes, documents, codes and more!</title>
  <link href="/css/style.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.52.2/codemirror.min.css">
</link>

<script type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.52.2/codemirror.min.js">
</script>
  <script type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.52.2/mode/javascript/javascript.min.js">
</script>
  <link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.52.2/theme/monokai.min.css">
</head>

<body>
  
  <br>
    <h1>Notebin - Save notes, documents, codes and more!</h1>
    <br>
    <h2><header class="head">Views: <%= views%>
    </header></h2>
   <form  style="width: 85%; margin : auto;">

    <div class="buttonHolder">
  <textarea id="text" name="text" spellcheck="false" required><%= code%></textarea>

  <br>
  <h2><a href="/">Create my own notebin</a></h2>

</div>

  </form>
  <script>
    const codemirror = CodeMirror.fromTextArea(document.getElementById("text"), {
  lineNumbers: true,
  lineWrapping: true,
  styleActiveLine: true,
        theme: 'monokai',
        mode: "javascript"
});
    codemirror.setSize(null, 800);
  
  
  </script>
